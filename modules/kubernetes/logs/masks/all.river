// all combines all masking components.
declare "all" {
	argument "forward_to" {
		// comment = "Must be a list(LogsReceiver) where collected logs should be forwarded to"
		optional = false
	}

	export "process" {
		value = ssn.default.process
	}

	ssn "default" {
		forward_to = [credit_card.default.process.receiver]
	}

	credit_card "default" {
		forward_to = [email.default.process.receiver]
	}

	email "default" {
		forward_to = [phone.default.process.receiver]
	}

	phone "default" {
		forward_to = [ipv4.default.process.receiver]
	}

	ipv4 "default" {
		forward_to = [ipv6.default.process.receiver]
	}

	ipv6 "default" {
		forward_to = argument.forward_to.value
	}
}
