// all combines all other formatting components.
declare "all" {
	argument "forward_to" {
		// comment = "Must be a list(LogsReceiver) where collected logs should be forwarded to"
		optional = false
	}

	export "process" {
		value = common_log.default.process
	}

	common_log "default" {
		forward_to = [dotnet.default.process.receiver]
	}

	dotnet "default" {
		forward_to = [istio.default.process.receiver]
	}

	istio "default" {
		forward_to = [json.default.process.receiver]
	}

	json "default" {
		forward_to = [klog.default.process.receiver]
	}

	klog "default" {
		forward_to = [log4j.default.process.receiver]
	}

	log4j "default" {
		forward_to = [logfmt.default.process.receiver]
	}

	logfmt "default" {
		forward_to = [otel.default.process.receiver]
	}

	otel "default" {
		forward_to = [postgres.default.process.receiver]
	}

	postgres "default" {
		forward_to = [python.default.process.receiver]
	}

	python "default" {
		forward_to = [spring_boot.default.process.receiver]
	}

	spring_boot "default" {
		forward_to = [syslog.default.process.receiver]
	}

	syslog "default" {
		forward_to = [zerolog.default.process.receiver]
	}

	zerolog "default" {
		forward_to = argument.forward_to.value
	}
}
